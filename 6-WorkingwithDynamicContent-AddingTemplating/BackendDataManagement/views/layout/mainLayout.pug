doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        //- block title 
        title #{pageTitle || 'product seller website'}
        block styles
    body 
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a(href='/', class=( pageTitle=== 'SHOP' ? 'active' : '')) Shop
                    li.main-header__item
                        a(href='/admin/add-product', class=( pageTitle=== 'ADD PRODUCT' ? 'active' : '')) Add Product
        block content